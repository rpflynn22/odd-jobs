extends layout

block content
  .container
    h1 Create a Job
    div(ng-controller="JobCreateCtrl")
      br
      form(role='form', action="/jobs/create", method="post", style='max-width: 300px;')
        .form-group
          input.form-control(type='text', name="title", placeholder='Job Title')
        .form-group
          input.form-control(type='textarea', name="description", placeholder='Job Description')
        .form-group
          input.form-control(type='text', name="salary", placeholder='Employee Compensation')
        .form-group
          input.form-control(type='number', name="location", placeholder='Zip Code')
        .form-group
          input.form-control(type='text', name="minDate", placeholder='Earliest Date')
        .form-group
          input.form-control(type='text', name="maxDate", placeholder='Latest Date')
        button.btn.btn-success(type='submit') Create
        &nbsp;
        a(href='/')
          button.btn.btn-danger(type="button") Cancel
