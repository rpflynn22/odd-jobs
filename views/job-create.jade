extends layout

block content
  script(src='/javascripts/getLoc.js')
  .container
    h1 Create a Job
    div(ng-controller="JobCreateCtrl")
      br
      form(role='form', action="/jobs/", method="post", style='max-width: 300px;')
        .form-group
          input.form-control(type='text', name="title", placeholder='Job Title')
        .form-group
          textarea.form-control(rows="3", name="description", placeholder='Job Description')
        .form-group
          input.form-control(type='text', name="tags", placeholder='Comma-Separated Tags', data-role='tagsinput', value="")
        .form-group
          input.form-control(type='number', name="salary", placeholder='Employee Compensation')
        .form-group
          input.form-control#lat(type='hidden', name='lat', value='')
        .form-group
          input.form-control#long(type='hidden', name='long', value='')
        .form-group
          input.form-control.datepicker(type='text', name="minDate", placeholder='Earliest Date', id="minDate")
        .form-group
          input.form-control.datepicker(type='text', name="maxDate", placeholder='Latest Date', id="maxDate")
        button.btn.btn-success(type='submit') Create
        &nbsp;
        a(href='/')
          button.btn.btn-danger(type="button") Cancel

