extends layout

block content
  .container
    script(src='/javascripts/getLoc.js')
    h1 Register For Odd Jobs!
    p.lead Get quick, easy opportunities to make some cash by registering for Odd Jobs.
    if error
      p(style='color: red') #{error}
    br
    form(role='form', action="/users", method="post", style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password', id="password")
      .form-group
        input.form-control(type='password', name="password_copy", placeholder='Re-enter password', id="password_copy")
      .form-group
        input.form-control(type='text', name="first_name", placeholder='First Name')
      .form-group
        input.form-control(type='text', name="last_name", placeholder='Last Name')
      .form-group
        input.form-control(type='text', name="description", placeholder='Description')
      .form-group
        input.form-control(type='email', name="email", placeholder='Email')
      .form-group
        input.form-control(type='number', name="distanceToTravel", placeholder='Distance Willing to Travel (mi.)')
      .form-group
        input.form-control#lat(type='hidden', name='lat', value='')
      .form-group
        input.form-control#long(type='hidden', name='long', value='')
      .form-group
        label
          input(type='checkbox' name='hireable')
          |  Looking for an odd job?
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
