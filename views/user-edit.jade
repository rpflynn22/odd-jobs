extends layout

block content
  .container
    h1 Edit Account
    br
    form(role='form', action="/users", method="put", style='max-width: 300px;')
    .form-group
      input.form-control(type='text', name="username", value='{{user.username}}')
    .form-group
      input.form-control(type='text', name="first_name", value='{{user.firstName}}')
    .form-group
      input.form-control(type='text', name="last_name", value='{{user.lastName}}')
    .form-group
      input.form-control(type='number', name="location", value='{{user.location}}')
    .form-group
      input.form-control(type='text', name="description", value='{{user.description}}')
    .form-group
      input.form-control(type='email', name="email", value='{{user.email}}')
