extends layout

block content
  .container
    h1 Edit Account
    br
    form(role='form', action="/users/#{user._id}", method="put", style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name="username", value='#{user.username}', placeholder='#{user.username}')
      .form-group
        input.form-control(type='text', name="first_name", value='#{user.firstName}', placeholder='#{user.firstName}')
      .form-group
        input.form-control(type='text', name="last_name", value='#{user.lastName}', placeholder='#{user.lastName}')
      .form-group
        input.form-control(type='number', name="location", value='#{user.location}', placeholder='#{user.location}')
      .form-group
        input.form-control(type='text', name="description", value='#{user.description}', placeholder='#{user.description}')
      .form-group
        input.form-control(type='email', name="email", value='#{user.email}', placeholder='#{user.email}')
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
